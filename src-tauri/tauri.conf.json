{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Gitification",
    "version": "0.2.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/tray.png",
      
      "menuOnLeftClick": false
    },
    "allowlist": {
      "http": {
        "request": true,
        "scope": ["https://github.com/*", "https://api.github.com/*"]
      },
      "process": {
        "exit": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/128x128@2x.png",
        "icons/icon.icns"
      ],
      "publisher": "Gitification",
      "identifier": "dev.gitification",
      "longDescription": "Gitification helps you to see your Github notifications with a single click and notifies you with sound.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["resources/*"],
      "shortDescription": "Manage your Github notifications",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 400,
        "resizable": false,
        "title": "Gitification",
        "width": 500,
        "transparent": true,
        "decorations": false,
        "visible": false
      }
    ]
  }
}
